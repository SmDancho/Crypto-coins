{
  "env": {
    "browser": true,
    "es2021": true
  },

  "settings": {
    "import/resolver": {
      "eslint-import-resolver-custom-alias": {
        "alias": {
          "src": "./src"
        },
        "extensions": [
          ".js",
          ".jsx"
        ],
        "packages": ["packages/*"]
      }
    }
  },
  "extends": [
    "react-app",
    "plugin:jsx-a11y/recommended",
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "tsconfigRootDir": "./",
    "ecmaVersion": "latest",
    // "project": "tsconfig.json",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "import",
    "jsx-a11y"
  ],
  "rules": {
    "require-jsdoc": 0,
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    "jsx-a11y/click-events-have-key-events":0,
    "max-len": [
      "error",
      {
        "code": 200,
        "tabWidth": 2
      }
    ]
  }
}
