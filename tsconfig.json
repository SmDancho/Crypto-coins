{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "entities/*": ["entities/*"],
      "widgets/*": ["widgets/*"],
      "shared/*": ["shared/*"],
      "pages/*": ["pages/*"],
      "app/*": ["app/*"]
    },
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
